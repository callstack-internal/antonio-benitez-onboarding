{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": "src",
    "strict": true,
    "types": ["jest", "node"],
    "paths": {
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@mocks/*": ["mocks/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
    },
  }
}
